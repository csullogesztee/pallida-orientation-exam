@model CarApplication.Models.Car
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Licence plate form</title>
    </head>
    <body>
        @using (Html.BeginForm())
        {
            <text>@Html.LabelFor(model => model.Plate): @Html.TextBoxFor(model => model.Plate)@Html.ValidationMessageFor(model => model.Plate)</text><a href="/police/RB" title="RB" class="RB">Police cars only</a>
            <a href="/diplomat/DT" title="DT" class="DT">Diplomats only</a><br />

            <button type="submit" value="Search">Search</button>
        }
        @*@Html.Partial()*@
        <table>
                <tr>
                    <td>Licence plate</td>
                    <td>Brand</td>
                    <td>Model</td>
                    <td>Color</td>
                    <td>Year</td>
                    <td>
                </tr>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Plate</td>
                    <td>@car.CarBrand</td>
                    <td>@car.CarModel</td>
                    <td>@car.Color</td>
                    <td>@car.Year</td>
                </tr>
            }
        </table>
    </body>
</html>
